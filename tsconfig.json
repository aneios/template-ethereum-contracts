{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "dist",
		"strict": true,
		"target": "es5"
	},
	"include": [
		"./deploy",
		"./scripts",
		"./test",
		"./utils",
		"hardhat.config.ts",
		"typechain/**/*"
	]
}
