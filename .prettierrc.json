{
	"arrowParens": "always",
	"bracketSameLine": true,
	"bracketSpacing": false,
	"embeddedLanguageFormatting": "auto",
	"endOfLine": "lf",
	"htmlWhitespaceSensitivity": "css",
	"overrides": [
		{
			"files": "*.sol",
			"options": {
				"parser": "solidity-parse"
			}
		}
	],
	"plugins": [
		"prettier-plugin-solidity"
	],
	"printWidth": 99,
	"quoteProps": "consistent",
	"semi": true,
	"singleAttributePerLine": true,
	"singleQuote": false,
	"tabWidth": 4,
	"trailingComma": "none",
	"useTabs": true
}
